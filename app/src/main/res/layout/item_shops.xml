<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dimen_16dp"
    android:paddingTop="@dimen/dimen_16dp"
    android:layout_marginEnd="@dimen/dimen_16dp"
    android:background="@drawable/item_yellow_rounded_corner_4radius"
    >
    <ImageView
        android:id="@+id/shop_image"
        android:layout_width="170dp"
        android:layout_height="300dp"
        android:layout_marginHorizontal="@dimen/dimen_16dp"
        android:src="@drawable/pooja_shop_image"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/shop_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shop Name"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/dimen_16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/shop_image"
        />
    <TextView
        android:id="@+id/shop_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:maxLines="3"
        android:text="This is the description of the shop"
        android:textColor="@color/gray"
        android:layout_marginTop="4dp"
        app:layout_constrainedWidth="true"
        app:layout_constraintStart_toStartOf="@id/shop_image"
        app:layout_constraintEnd_toEndOf="@id/shop_image"
        app:layout_constraintTop_toBottomOf="@id/shop_name"
        />
    <TextView
        android:id="@+id/shop_specialty"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Diya, Hawan Saman, Dhoop, Dubi, etc"
        android:textColor="@color/gray"
        android:layout_marginTop="6dp"
        android:paddingBottom="8dp"
        app:layout_constraintStart_toStartOf="@id/shop_image"
        app:layout_constraintEnd_toEndOf="@id/shop_image"
        app:layout_constraintTop_toBottomOf="@id/shop_desc"
        />


</androidx.constraintlayout.widget.ConstraintLayout>